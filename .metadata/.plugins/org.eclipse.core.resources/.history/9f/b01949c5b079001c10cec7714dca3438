package Problems;

import java.util.Scanner;

public class P1 {

	public static void main(String[] args) {
		
		int num1, num2, num3, sumF, sumW, sumR;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Enter the first number:");
		num1 = sc.nextInt();
		
		System.out.print("Enter the second number:");
		num2 = sc.nextInt();
		
		System.out.print("Enter the third number:");
		num3 = sc.nextInt();
		
		sumF = SumUsingForLoop(num1, num2, num3);
		System.out.println("The Sum of three numbers:" + sumF);
		
		sumW = SumUsingWhileLoop(num1, num2, num3);
		System.out.println("The Sum of three numbers:" + sumW);
		
		sumR = SumUsingRecursion(num1, num2, num3);
		System.out.println("The Sum of three numbers:" + sumR);
	}

	public static int SumUsingForLoop(int a, int b, int c) {
		
		int sum = a + b + c;
		return sum;
		
	}
	
	public static int SumUsingWhileLoop(int a, int b, int c) {
		
		int sum = a + b + c;
		return sum;
	}
	
	public static int SumUsingRecursion(int a, int b, int c) {
		
		int sum = a + b + c;
		return sum;
	}
}
